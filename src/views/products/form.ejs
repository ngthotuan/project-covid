<!-- Page content -->
<div id="page-content">
    <!-- Product Edit Content -->
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <!-- General Data Block -->
            <div class="block">
                <%- include('../partials/messages') %>
                <!-- General Data Title -->
                <div class="block-title">
                    <h2><i class="fa fa-pencil"></i> <strong>Edit Product</strong></h2>
                </div>
                <!-- END General Data Title -->

                <!-- General Data Content -->
                <form id="product-form" method="post" class="form-horizontal form-bordered">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="code">FA Code</label>
                        <div class="col-md-9">
                            <input type="text" id="code" name="code"
                                value="<%= typeof product !== 'undefined' ? product.code : '' %>"
                                class="form-control" placeholder="code" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="name">Name</label>
                        <div class="col-md-9">
                            <input type="text" id="name" name="name"
                            value="<%= typeof product !== 'undefined' ? product.name : '' %>"
                                class="form-control" placeholder="name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="is_active">Active</label>
                        <div class="col-md-9">
                            <label class="switch switch-primary">
                                <input type="checkbox" id="is_active" name="is_active" 
                                <%- typeof product !== 'undefined' ? product.is_active ? "checked" : "" : "" %>><span></span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group form-actions">
                        <div class="col-md-6 col-md-offset-6">
                            <% if(typeof product !== "undefined") {%>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Cập nhật
                                </button>
                            <% } else { %>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Tạo mới
                                </button>
                            <% } %>
                                <a href="/products" class="btn btn-danger"><i class="fa fa-times"></i> Hủy bỏ</a>
                        </div>
                    </div>
                </form>
                <!-- END General Data Content -->
            </div>
            <!-- END General Data Block -->
        </div>
    </div>
    <!-- END Product Edit Content -->
</div>
<!-- END Page Content -->
<script src="/js/products/product-form.js"></script>