<!-- Page content -->
<div id="page-content">
    <!-- Product Edit Content -->
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <!-- General Data Block -->
            <div class="block">
                <%- include('../partials/messages') %>
                <!-- General Data Title -->
                <div class="block-title">
                    <h2><i class="fa fa-pencil"></i> <strong>Thông tin tài khoản người quản lý</strong></h2>
                </div>
                <!-- END General Data Title -->

                <!-- General Data Content -->
                <form id="manager-form" method="post" class="form-horizontal form-bordered">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="username">Tên đăng nhập</label>
                        <div class="col-md-9">
                            <input type="text" id="username" name="username"
                                value="<%= typeof username !== 'undefined' ? username : '' %>"
                                class="form-control" placeholder="Username" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="role">Phân quyền</label>
                        <div class="col-md-9">
                            <select required
                                    id="role"
                                    name="role"
                                    class="select-chosen"
                                    data-placeholder="Phân quyền"
                            >
                                <% Object.entries(roles).forEach(([key, value]) => { %>
                                    <option value="<%= value %>"
                                            <%= typeof account !== 'undefined' ? account.role == value ? 'selected' : '' : '' %>>
                                        <%= key %>
                                    </option>
                                <%})%>
                            </select>
                        </div>
                    </div>
                    <div class="form-group form-actions">
                        <div class="col-md-6 col-md-offset-6">
                            <% if(typeof account !== "undefined") {%>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Cập nhật
                                </button>
                            <% } else { %>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Tạo mới
                                </button>
                            <% } %>
                                <a href="/managers" class="btn btn-danger"><i class="fa fa-times"></i> Hủy bỏ</a>
                        </div>
                    </div>
                </form>
                <!-- END General Data Content -->
            </div>
            <!-- END General Data Block -->
        </div>
    </div>
    <!-- END Product Edit Content -->
</div>
<!-- END Page Content -->
<script src="/js/accounts/account-manager-form.js"></script>