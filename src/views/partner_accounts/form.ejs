<!-- Page content -->
<div id="page-content">
    <!-- partner_account Edit Content -->
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <!-- General Data Block -->
            <div class="block">
                <%- include('../partials/messages') %>
                <!-- General Data Title -->
                <div class="block-title">
                    <h2><i class="fa fa-pencil"></i> <strong>Edit partner_account</strong></h2>
                </div>
                <!-- END General Data Title -->

                <!-- General Data Content -->
                <form id="partner_account-form" method="post" class="form-horizontal form-bordered">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="partner">Partner</label>
                        <div class="col-md-9">
                            <select
                                    id="partner"
                                    name="partner_code"
                                    class="select-chosen"
                                    data-placeholder="Select Partner"
                            >
                                <option value="">Select Partner</option>
                                <% partners.forEach(function(partner) { %>
                                    <option value="<%= partner.code %>"
                                            <%= typeof entity !== 'undefined' ? entity.partner_code === partner.code ? 'selected' : '' : '' %>
                                    >
                                        <%= `${partner.code} (${partner.name})`%>
                                    </option>
                                <%})%>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="username">Username</label>
                        <div class="col-md-9">
                            <input type="text" id="username" name="username"
                            value="<%= typeof entity !== 'undefined' ? entity.username : '' %>"
                                class="form-control" placeholder="username" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="password">Password</label>
                        <div class="col-md-9">
                            <input type="text" id="password" name="password"
                            value="<%= typeof entity !== 'undefined' ? entity.password : '' %>"
                                class="form-control" placeholder="password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="password2">Password2</label>
                        <div class="col-md-9">
                            <input type="text" id="password2" name="password2"
                            value="<%= typeof entity !== 'undefined' ? entity.password2 : '' %>"
                                class="form-control" placeholder="password2" />
                        </div>
                    </div>
                    <div class="form-group form-actions">
                        <div class="col-md-6 col-md-offset-6">
                            <% if(typeof entity !== "undefined") {%>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Update
                                </button>
                            <% } else { %>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Create
                                </button>
                            <% } %>
                                <a href="/partner_accounts" class="btn btn-danger"><i class="fa fa-times"></i> Cancel</a>
                        </div>
                    </div>
                </form>
                <!-- END General Data Content -->
            </div>
            <!-- END General Data Block -->
        </div>
    </div>
    <!-- END partner_account Edit Content -->
</div>
<!-- END Page Content -->
<script src="/js/partner_accounts/partner_account-form.js"></script>